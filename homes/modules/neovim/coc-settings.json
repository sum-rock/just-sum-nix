"languageserver": {
  "nix": {
    "command": "rnix-lsp",
    "filetypes": [ "nix" ]
  },
  "lua": {
    "command": "lua-lsp",
    "filetypes": [ "lua" ]
  },
  "pyright": {
    "organizeimports.provider": "isort",
    "inlayHints.variableTypes": false
  },
  "python": {
    "linting.flake8Enabled": true,
    "formatting": {
      "provider": "black",
      "blackPath": "/run/current-system/sw/bin/black"
    }
  }
}
