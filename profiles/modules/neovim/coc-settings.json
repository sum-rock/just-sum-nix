{
  "languageserver": {
    "nix": {
      "command": "rnix-lsp",
      "filetypes": [
        "nix"
      ]
    },
    "python": {
      "command": "coc-pyright",
      "filetypes": [
        "python"
      ],
      "pyright": {
        "organizeimports": {
          "provider": "isort"
        }
      },
      "linting": {
        "flake8Enabled": true
      },
      "formatting": {
        "provider": "black",
        "blackPath": "/run/current-system/sw/bin/black",
        "blackArgs": ["--diff", "--quiet", "--fast"]
      }
    }
  }
}
